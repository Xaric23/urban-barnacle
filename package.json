{
  "name": "underground-club-manager",
  "version": "0.1.0",
  "description": "Underground Club Manager - A text-based management game",
  "author": "Xaric23",
  "main": "electron/main.js",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "eslint",
    "electron": "electron .",
    "electron-dev": "cross-env NODE_ENV=development electron .",
    "build-electron": "next build && electron-builder --publish never",
    "build-exe": "next build && electron-builder --win --x64 --publish never",
    "pack": "electron-builder --dir --publish never",
    "dist": "electron-builder --publish never",
    "publish": "next build && electron-builder --win --x64 --publish always",
    "android:sync": "npx cap sync android",
    "android:open": "npx cap open android",
    "android:build": "npm run build && npx cap sync android",
    "android:run": "npm run android:build && npx cap run android"
  },
  "build": {
    "appId": "com.xaric23.underground-club-manager",
    "productName": "Underground Club Manager",
    "directories": {
      "output": "dist"
    },
    "files": [
      "out/**/*",
      "electron/**/*",
      "package.json"
    ],
    "win": {
      "target": [
        "nsis"
      ],
      "signAndEditExecutable": false
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    },
    "publish": {
      "provider": "github",
      "owner": "Xaric23",
      "repo": "urban-barnacle"
    }
  },
  "dependencies": {
    "@capacitor/android": "^7.4.4",
    "@capacitor/cli": "^7.4.4",
    "@capacitor/core": "^7.4.4",
    "electron-updater": "6.7.2",
    "next": "16.0.3",
    "react": "19.2.0",
    "react-dom": "19.2.0"
  },
  "devDependencies": {
    "@tailwindcss/postcss": "^4",
    "@types/node": "^25",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "cross-env": "^10.1.0",
    "electron": "^39.2.6",
    "electron-builder": "26.3.5",
    "eslint": "^9",
    "eslint-config-next": "16.0.7",
    "tailwindcss": "^4",
    "typescript": "^5"
  }
}
